{% extends 'base.html.twig' %}

{% block title %}Kassas Taxi 92 {% endblock %}

{% block body %}

<div class="section">
	<div class="container">
    	<div class="row">
			<div class="col-lg-9">
                <div class="row shop_container">
                   {% for taxi in pagination %}
                              {{ include('partials/taxi.html.twig',{'taxi':taxi}) }} 
                            {% endfor %}
                </div>
                <div class="navigation mx-auto" style="width:max-content;">
	       	     {{ knp_pagination_render(pagination) }}
	      </div>
        	</div>
          <div class="col-lg-3 order-lg-first mt-4 pt-2 mt-lg-0 pt-lg-0">
            	<div class="sidebar">
              {{ form_start(search) }}
                	<button class="btn btn-border-fill btn-block"> {{ button_label|default('Recherche') }}</button>
                    <div class="widget " style='margin-top:30px;'>
                    	<h5 class="widget_title">Place</h5>
                      <div class="form-row">
                        <div class="col-md-6">
                        {{ form_row(search.minplace) }}
                        </div>
                        <div class="col-md-6">
                        {{ form_row(search.maxplace) }}
                        </div>
                      </div>

                    </div>
                    <div class="widget">
                    	<h5 class="widget_title">Baguage </h5>
                     <div class="form-row">
                        <div class="col-md-6">
                        {{ form_row(search.minbagage) }}
                        </div>
                        <div class="col-md-6">
                        {{ form_row(search.maxbagage) }}
                        </div>
                      </div>
                    </div>

                    <div class="form-control">
                        <h5 class="widget_title">Cat√©gories</h5>
                       {{form_row(search.categories,'attr': {'class': 'categoriesmultiple'})}}
                    </div>
                    
                     {{ form_end(search) }}
                </div>
          </div>
        </div>
        
    </div>
</div>
<script>
$(document).ready(function(){
    $(".categoriesmultiple").select2();
 });

 $('.categoriesmultiple').autoComplete();
</script>
{% endblock %}

